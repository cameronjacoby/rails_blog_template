<div class="row">

  <div class="col-sm-3">
    <div id="all-tags">
      <% @tags.each do |tag| %>
        <a href="/tags/<%= tag[:id] %>"><%= tag.name %></a>
      <% end %>
    </div>
  </div>

  <div class="col-sm-6">

  <div id="post">
    <h3><a href="/posts/<%= @post[:id] %>"><%= @post[:title] %></a></h3>
    <div id="tagline"><em><%= @post[:tagline] %></em></div>
    <img src="<%= @post[:image] %>">
    <div id="content"><%= @post[:content] %></div>
    <div id="author-tags">
      <p>Post by: <a href="#"><%= @post[:author] %></a></p>
      <p>
        Tags:
        <% @post.tags.each do |tag| %>
          <a href="/tags/<%= tag[:id] %>"><%= tag.name %></a>
        <% end %>
      </p>
    </div>

    <div id="edit-comment">
      <h3>Edit Comment</h3>

      <%= form_for [@post, @comment] do |f| %>

        <div class="form-group">
          <div class="col-sm-12">
            <%= f.text_field :title, class: "form-control", placeholder: "Title", autofocus: true %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-12">
            <%= f.text_field :author, class: "form-control", placeholder: "Author" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-12">
            <p><%= f.text_area :body, class: "form-control", placeholder: "Comment Text" %></p>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-12">
            <%= f.submit "Update Comment", class: "btn btn-default", id:"save-btn" %>
          </div>
        </div>

      <% end %>

      <%= button_to "Delete Comment", [@post, @comment], method: :delete, class: "btn btn-default", id: "delete-btn" %>

    </div>
  </div>

  <div class="col-sm-3"></div>
</div>