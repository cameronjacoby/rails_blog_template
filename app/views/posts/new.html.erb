<h1>New Post</h1>
<p>
  <a href="/">Home</a>
  <a href="/posts/new">New Post</a>
</p>

<form action="/posts" method="post">
  <p>
    <label for="title">Title</label>
    <input type="text" name="post[title]" id="title" autofocus>
  </p>
  <p>
    <label for="author">Author</label>
    <input type="text" name="post[author]" id="author">
  </p>
  <p>
    <label for="tagline">Tagline</label>
    <input type="text" name="post[tagline]" id="tagline">
  </p>
  <p>
    <label for="content">Content</label>
    <textarea name="post[content]" id="content"></textarea>
  </p>
    <p>
    <label for="image">Image URL</label>
    <input type="text" name="post[image]" id="image">
  </p>
  </p>
  <p>
    <label for="tags">Tags</label>
    <input type="text" name="post[tags]" id="tags">
  </p>

  <%= token_tag form_authenticity_token %>

  <input type="submit" value="Save Post">
</form>