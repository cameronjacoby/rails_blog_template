<div class="row">

  <div class="col-sm-3">
    <!-- <div id="all-tags">
    </div> -->
  </div>

  <div class="col-sm-6">

    <div id="new-post">
      <h3>New Post</h3>

      <form action="/posts" method="post" class="form-horizontal" role="form">
        <div class="form-group">
          <div class="col-sm-12">
            <input type="text" name="post[title]" class="form-control" id="title" placeholder="Title"autofocus>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-12">
            <input type="text" name="post[author]" class="form-control" id="author" placeholder="Author">
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-12">
            <input type="text" name="post[tagline]" class="form-control" id="tagline" placeholder="Tagline">
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-12">
            <textarea name="post[content]" class="form-control" id="content" placeholder="Content"></textarea>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-12">
            <input type="text" name="post[image]" class="form-control" id="image" placeholder="Image URL">
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-12">
            <input type="text" name="post[tags]" class="form-control" id="tags" placeholder="#tags">
          </div>
        </div>

        <%= token_tag form_authenticity_token %>

        <div class="form-group">
          <div class="col-sm-12">
            <input type="submit" class="btn btn-default" id="save-btn" value="Save Post">
          </div>
        </div>
      </form>

    </div>
  </div>

  <div class="col-sm-3"></div>
</div>