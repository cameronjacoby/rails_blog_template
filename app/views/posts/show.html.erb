<div class="row">

  <div class="col-sm-3">
    <div id="all-tags">
      <% @tags.each do |tag| %>
        <a href="/tags/<%= tag[:id] %>"><%= tag.name %></a>
      <% end %>
    </div>
  </div>

  <div class="col-sm-6">
    <div id="post">
      <h3><%= @post[:title] %></h3>
      <div id="tagline"><em><%= @post[:tagline] %></em></div>
      <img src="<%= @post[:image] %>">
      <div id="content"><%= @post[:content] %></div>
      <div id="author-tags">
        <p>Post by: <a href="#"><%= @post[:author] %></a></p>
        <p>
          Tags:
          <% @post.tags.each do |tag| %>
            <a href="/tags/<%= tag[:id] %>"><%= tag.name %></a>
          <% end %>
        </p>
      </div>

      <div>
        <a href="/posts/<%= @post[:id] %>/edit">Edit Post</a>
      </div>

      <div>
        <% if @post.comments.length > 0 %>
          <h4><a href="/posts/<%= @post[:id] %>/comments">Comments about <%= @post[:title] %></a></h4>
          <% @post.comments.each do |comment| %>
            <h5><a href="/posts/<%= @post[:id] %>/comments/<%= comment[:id] %>"><%= comment[:title] %></a></h5>
            <p>Comment by: <a href="#"><%= comment[:author] %></a></p>
            <p><%= comment[:body] %></p>
          <% end %>
        <% end %>
        <p><a href="/posts/<%= @post[:id] %>/comments/new">New Comment</a></p>
      </div>

    </div>

  </div>
  <div class="col-sm-3"></div>
</div>